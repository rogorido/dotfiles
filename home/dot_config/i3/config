bindsym XF86AudioMute exec amixer set Master toggle

# con -s permite seleccionar un fragmento de pantalla
# eso de --release es porque si no al tocar el ratón i3 se confunde
# y evita el screenshot
bindsym --release Print exec "scrot -d 4 -s $HOME/latexpruebas/`date +%Y-%m-%d_%H:%M:%S`.png"
# -u es para la ventana activa
bindsym --release $mod+Print exec "scrot -u $HOME/latexpruebas/`date +%Y-%m-%d_%H:%M:%S`.png"

